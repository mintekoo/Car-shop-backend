              "raw": "{\n  \"username\": \"renter1\",\n  \"password\": \"password123\",\n  \"fullName\": \"Renter One\",\n  \"email\": \"renter1@example.com\",\n  \"phone\": \"+1234567890\",\n  \"role\": \"renter\",\n  \"address\": \"123 Renter St, City\"\n}",
